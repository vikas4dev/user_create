- hosts: all
  become: true
  vars_files:
    - user.yml

  tasks:
    - name: group add
      group:
        name: "{{ item }}"
        state: present
      with_items:
        - gdesc
        - manager
        - developer

    - name: add user
      user:
        name: "{{ item.name }}"
        group: "{{ item.group }}"
      with_items:
        - "{{ myusers }}"
